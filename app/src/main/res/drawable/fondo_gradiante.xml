<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Primer gradiente -->
    <item>
        <shape>
            <gradient
                android:startColor="#CD9732"
                android:endColor="#CD9732"
                android:angle="90"
                android:type="linear"
                android:centerX="0.5"
                android:centerY="0.0"
                android:endY="1.0"/>
        </shape>
    </item>

    <!-- Segundo gradiente -->
    <item android:top="140dp">
        <shape>
            <gradient
                android:startColor="#41527D"
                android:endColor="#29344F"
                android:angle="90"
                android:type="linear"
                android:centerX="0.5"
                android:centerY="0.0"
                android:endY="1.0"/>
        </shape>
    </item>

</layer-list>
