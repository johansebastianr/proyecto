<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Primer gradiente -->
    <item>
        <shape>
            <corners android:radius="35dp"/>
            <gradient
                android:startColor="#D9D9D9"
                android:endColor="#D9D9D9"
                android:angle="90"
                android:type="linear"
                android:centerX="0.5"
                android:centerY="0.0"
                android:endY="1.0"/>
        </shape>
    </item>

    <!-- Segundo gradiente -->
    <item android:top="150dp">
        <shape>
            <gradient
                android:startColor="#EBEBEB"
                android:endColor="#EBEBEB"
                android:angle="90"
                android:type="linear"
                android:centerX="0.5"
                android:centerY="0.0"
                android:endY="1.0"/>
        </shape>
    </item>

</layer-list>

